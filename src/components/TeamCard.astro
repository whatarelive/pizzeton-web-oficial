---
import type { TeamMember } from '@/interfaces';

interface Props {
    teamMember: TeamMember;
}

const { teamMember } = Astro.props;
const { img, name, position, bio } = teamMember;
---

<article class="flex flex-col items-center p-6 gap-3 max-w-64 rounded-xl bg-base">
    <img src={img} alt={`Foto de ${position} ${name}`}
        class="rounded-full w-28"
    />

    <h6 class="text-white font-medium text-xl">
        {name}
    </h6>

    <div class="flex flex-col items-center">
        <span class="text-white font-semibold text-opacity-70">
            {position}
        </span>

        <p class="text-white text-center text-opacity-40">
            {bio}
        </p>
    </div>
</article>