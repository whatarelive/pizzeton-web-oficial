---
import type { TeamMember } from '@/interfaces';

interface Props {
    teamMember: TeamMember;
}

const { teamMember } = Astro.props;
const { img, name, position } = teamMember;
---

<article class="flex flex-col items-center min-w-[272px] p-6 gap-3 max-w-64 xs:max-w-72 rounded-xl bg-base lg:hover:animate-scale">
    <img src={img} alt={`Foto de ${position} ${name}`} loading="lazy" class="rounded-full w-28"/>
    
    <div class="flex flex-col gap-1 items-center">
        <h6 class="text-xl">
            {name}
        </h6>
        
        <span class="text-white text-opacity-70">
            {position}
        </span>
    </div>
</article>