---
import type { TeamMember } from '@/interfaces';

interface Props {
    teamMember: TeamMember;
}

const { teamMember } = Astro.props;
const { img, name, position, bio } = teamMember;
---

<article class="flex flex-col items-center p-6 gap-3 max-w-64 xs:max-w-72 rounded-xl bg-base lg:hover:animate-scale">
    <h6 class="text-xl">
        {name}
    </h6>

    <img src={img} alt={`Foto de ${position} ${name}`}
        class="rounded-full w-28"
    />

    <div class="flex flex-col gap-1 items-center">

        <span class="text-white font-semibold text-opacity-70">
            {position}
        </span>

        <p class="text-white text-opacity-40 text-center">
            {bio}
        </p>
    </div>
</article>