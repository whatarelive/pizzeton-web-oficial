---
import type { Event } from '@/interfaces';

interface Props {
    event: Event;
}

const { event } = Astro.props;
const { img, title, subtitle } = event;
---

<article class="flex flex-col-reverse max-w-64 sm:max-w-72 bg-base rounded-xl lg:hover:animate-scale">
    <img src={img} alt={`Imagen de la ${title}`} 
        class="rounded-es-xl rounded-ee-xl h-36"
    />
    
    <div class="flex flex-col justify-center items-center gap-3 p-6">
        <h6>{title}</h6>
        <p class="text-center">
            {subtitle}
        </p>
    </div>
</article>