---
import ValorationRate from "./ValorationRate.astro";
import { opinions } from "@/data/data";
---

<ul class="container flex min-w-full space-x-2 px-6 overflow-x-scroll lg:justify-center lg:overflow-hidden gap-8 pb-6">
    {
        opinions.map(({ user, description, valoration }) => (
            <li class="flex flex-col items-center min-w-[272px] max-w-[272px] h-fit p-6 gap-4 bg-primary rounded-lg">
                <ValorationRate valoration={ valoration }/>
                <p class="text-center">
                    { description }
                </p>
                <h6>{ user }</h6>
            </li>
        ))
    }
</ul>