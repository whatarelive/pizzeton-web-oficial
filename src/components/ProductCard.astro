---
import ProductPrice from './react/ProductPrice';
import type { Product } from '@/interfaces';

interface Props {
    product: Product;
}

const { product } = Astro.props;
const { img, title, subtitle, price } = product;
---

<article class={`flex flex-col max-w-64 bg-secondary rounded-xl`}>
    <img src={img} alt={`Imagen de la ${title}`} 
        class="rounded-ss-xl rounded-se-xl"
    />
    
    <div class="flex flex-col items-center gap-2 p-3">
        <h6 class="text-white text-lg font-semibold">
            {title}
        </h6>
        <p class="text-white text-opacity-45 font-light text-sm text-center">
            {subtitle}
        </p>

        <ProductPrice price={price} client:visible/>
    </div>
</article>