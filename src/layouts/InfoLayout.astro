---
interface Props {
    readonly image: string;
    readonly alt: string;
}

const { image, alt } = Astro.props;
---

<div class="flex flex-col lg:flex-row max-w-max mx-6 items-center gap-6 self-center p-4 bg-secondary rounded-xl justify-center">
    <img
        src=`/svg/${image}.svg`
        alt={alt}
        class="w-56 xs:w-64 sm:w-80 p-6 opacity-85 bg-base rounded-xl"
    />
    <div class="flex flex-col w-56 xs:w-64 sm:w-80 items-center gap-6">
        <slot/>
    </div>
</div>