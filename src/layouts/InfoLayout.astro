---
interface Props {
    readonly image: string;
    readonly alt: string;
}

const { image, alt } = Astro.props;
---

<div class="flex flex-col md:flex-row size-edit items-center gap-6 self-center p-4 bg-secondary rounded-xl justify-center">
    <img
        src=`/svg/${image}.svg`
        alt={alt}
        class="w-full md:w-80 lg:w-96 p-6 opacity-85 bg-base rounded-xl"
    />
    <div class="flex flex-col md:w-80 lg:w-96 items-center gap-6">
        <slot/>
    </div>
</div>