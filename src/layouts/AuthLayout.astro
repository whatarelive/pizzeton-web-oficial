---
import PageLayout from './PageLayout.astro';

interface Props {
    subtitle: string;
}

const { subtitle } = Astro.props;
---

<PageLayout>
    <main class="section-home">
        <section class="h-screen flex justify-center items-center bg-black bg-opacity-40">
            <div class="self-center flex flex-col items-center justify-center 
                gap-4 py-6 px-2 lg:px-6 w-11/12 sm:w-10/12 md:w-6/12 lg:w-4/12 xl:w-3/12 rounded-xl bg-primary bg-opacity-75"
            >    
                <div class="flex flex-col items-center">
                    <img src="/svg/logo.svg" alt="Logo Pizzetón D'Guti" class="w-32 xl:w-36"/>
                    <h1 class="text-2xl md:text-3xl xl:text-4xl">
                        Pizzeton D'Gutí
                    </h1>
    
                    <p class="mt-1 text-white text-lg text-opacity-80">
                        { subtitle }
                    </p>
                </div>
                
                <slot/>
            </div>
        </section>
    </main>
</PageLayout>