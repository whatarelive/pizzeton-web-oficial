---
interface Props {
    id?: string;
    title: string;
    bgView?: string;
}

const { id, title, bgView } = Astro.props;
---

<section id={id} class={`${bgView} px-6 py-12`}>
    <h4 class="text-white text-2xl text-center font-semibold">
        {title}
    </h4>
    
    <slot name="description"/>

    <div class="flex flex-col md:flex-row items-center mt-8 gap-6">
        <slot/>
    </div>
</section>