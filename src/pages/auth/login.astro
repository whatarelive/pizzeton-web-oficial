---
import AuthLayout from "@/layouts/AuthLayout.astro";
---

<AuthLayout subtitle="Inicia sesión en tu cuenta">
    <form method="post" class="form min-w-full">
        <label title="Número de Telefono" for="userEmail">
            <input
            name="userEmail"
            id="userEmail"
            type="email"
            placeholder="Correo electronico"
            class="input"
            aria-describedby="error-userEmail"
            autocomplete="off"
            required
            />
            <!-- { inputErrors.userEmail
            && <p id="error-userEmail" class="error">
                {inputErrors.userEmail.join(', ')}
                </p>
            } -->
        </label>
        <label title="Contraseña" for="password">
            <input
                name="password"
                id="password"
                type="password"
                placeholder="Contraseña"
                class="input"
                aria-describedby="error-password"
                autocomplete="off"
                required
            />
            <!-- { inputErrors.userName
                && <p id="error-userName" class="error">
                        {inputErrors.userName.join(', ')}
                </p>
            } -->
        </label>

        <button type="reset" class="btn-submit">
            Iniciar Sesión
        </button>
    </form>

    <div class="flex flex-col items-center">
        ¿No tienes una cuenta?
        <a href="/auth/register" target="_self" class="text-orange-400">
            Crear Cuenta
        </a>
    </div>
</AuthLayout>